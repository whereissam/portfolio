---
import Globe from "../components/Globe";
import BasicLayout from "../layouts/BasicLayout.astro";
---

<script>
  import { timeline, type TimelineDefinition } from "motion";

  const sequence = [
    [
      ".loaderRef",
      { opacity: [1, 0], pointerEvents: "none" },
      { easing: "ease-out" },
    ],
  ];

  timeline(sequence as TimelineDefinition);
</script>

<BasicLayout
  title="Sam - Visited Countries"
  description="A 3d globe showing countries that I have visited so far"
  page="travel"
>
  <a
    href="/"
    class="text-bs-white-100 absolute bg-bs-black-300 hover:bg-bs-black-400 top-4 left-4 px-4 py-2 border border-bs-black-400 rounded-lg transition-all duration-200 font-medium z-10"
    >‚Üê Back</a
  >

  <Globe client:load />
</BasicLayout>
