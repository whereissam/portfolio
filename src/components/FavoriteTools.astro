---
import Card from "./Card/index.astro";
import { Icon } from "astro-icon/components";
---

<Card 
  colSpan="md:col-span-1" 
  rowSpan="md:row-span-2" 
  title="ðŸ› ï¸ Favorite Tools & Apps"
  href="/tools"
  variant="outline"
>
  <div class="flex flex-col h-full">
    <!-- Preview grid -->
    <div class="flex-1 overflow-hidden space-y-3 max-h-[240px] py-2 px-1">
      {
        [
          {
            name: "VS Code",
            category: "Editor",
            icon: "ri:code-s-slash-line",
            color: "text-blue-400",
            bgColor: "bg-blue-400/20",
            borderColor: "border-blue-400/30"
          },
          {
            name: "Figma",
            category: "Design",
            icon: "ri:pencil-ruler-2-line",
            color: "text-purple-400",
            bgColor: "bg-purple-400/20",
            borderColor: "border-purple-400/30"
          },
          {
            name: "Linear",
            category: "Productivity",
            icon: "ri:task-line",
            color: "text-indigo-400",
            bgColor: "bg-indigo-400/20",
            borderColor: "border-indigo-400/30"
          },
          {
            name: "Arc Browser",
            category: "Browser",
            icon: "ri:global-line",
            color: "text-orange-400",
            bgColor: "bg-orange-400/20",
            borderColor: "border-orange-400/30"
          },
          {
            name: "Raycast",
            category: "Productivity",
            icon: "ri:flashlight-line",
            color: "text-green-400",
            bgColor: "bg-green-400/20",
            borderColor: "border-green-400/30"
          }
        ].slice(0, 4).map((tool) => (
          <div class="group relative bg-bs-black-300 rounded-lg p-3 hover:bg-bs-black-400 transition-all duration-200 border border-bs-black-400 hover:border-bs-red transform hover:scale-[1.01] hover:shadow-md hover:shadow-bs-red/5">
            <div class="flex items-center gap-3">
              <div class={`flex-shrink-0 p-2 rounded-lg ${tool.bgColor} border ${tool.borderColor}`}>
                <Icon name={tool.icon} class={`h-4 w-4 ${tool.color}`} />
              </div>
              
              <div class="flex-1 min-w-0">
                <h3 class="text-sm font-semibold text-bs-white-100 group-hover:text-bs-red transition-colors">
                  {tool.name}
                </h3>
                <span class="text-xs text-bs-white-300">
                  {tool.category}
                </span>
              </div>
              
              <Icon name="ri:arrow-right-s-line" class="h-4 w-4 text-bs-white-300 group-hover:text-bs-red transition-colors" />
            </div>
          </div>
        ))
      }
    </div>
    
    <!-- Footer -->
    <div class="mt-4 pt-3 border-t border-bs-black-400">
      <div class="text-center">
        <span class="inline-flex items-center gap-2 text-bs-white-300 hover:text-bs-red text-xs font-medium transition-colors cursor-pointer">
          View all tools & apps
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </span>
      </div>
    </div>
  </div>
</Card>