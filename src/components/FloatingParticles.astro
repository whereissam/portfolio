---
// Floating particles component for background animation
---

<div class="floating-particles fixed inset-0 pointer-events-none z-0" aria-hidden="true">
  {Array.from({ length: 20 }, (_, i) => (
    <div 
      class={`particle absolute rounded-full bg-gradient-to-r from-bs-red/20 to-orange-400/20 animate-float-${(i % 4) + 1}`}
      style={`
        width: ${Math.random() * 8 + 4}px;
        height: ${Math.random() * 8 + 4}px;
        left: ${Math.random() * 100}%;
        top: ${Math.random() * 100}%;
        animation-delay: ${Math.random() * 10}s;
        animation-duration: ${Math.random() * 20 + 15}s;
      `}
    />
  ))}
</div>

<style>
  @keyframes float-1 {
    0%, 100% { 
      transform: translateY(0px) translateX(0px) rotate(0deg);
      opacity: 0.3;
    }
    25% { 
      transform: translateY(-20px) translateX(10px) rotate(90deg);
      opacity: 0.6;
    }
    50% { 
      transform: translateY(-40px) translateX(-5px) rotate(180deg);
      opacity: 0.4;
    }
    75% { 
      transform: translateY(-20px) translateX(-15px) rotate(270deg);
      opacity: 0.7;
    }
  }

  @keyframes float-2 {
    0%, 100% { 
      transform: translateY(0px) translateX(0px) rotate(0deg);
      opacity: 0.2;
    }
    33% { 
      transform: translateY(-30px) translateX(-20px) rotate(120deg);
      opacity: 0.5;
    }
    66% { 
      transform: translateY(-15px) translateX(25px) rotate(240deg);
      opacity: 0.6;
    }
  }

  @keyframes float-3 {
    0%, 100% { 
      transform: translateY(0px) translateX(0px) rotate(0deg);
      opacity: 0.4;
    }
    40% { 
      transform: translateY(-25px) translateX(15px) rotate(144deg);
      opacity: 0.3;
    }
    80% { 
      transform: translateY(-50px) translateX(-10px) rotate(288deg);
      opacity: 0.5;
    }
  }

  @keyframes float-4 {
    0%, 100% { 
      transform: translateY(0px) translateX(0px) rotate(0deg);
      opacity: 0.3;
    }
    20% { 
      transform: translateY(-15px) translateX(-25px) rotate(72deg);
      opacity: 0.6;
    }
    60% { 
      transform: translateY(-35px) translateX(20px) rotate(216deg);
      opacity: 0.4;
    }
  }

  .animate-float-1 { animation: float-1 linear infinite; }
  .animate-float-2 { animation: float-2 linear infinite; }
  .animate-float-3 { animation: float-3 linear infinite; }
  .animate-float-4 { animation: float-4 linear infinite; }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .floating-particles {
      display: none;
    }
  }

  /* Reduce particles on mobile for performance */
  @media (max-width: 768px) {
    .particle:nth-child(n+11) {
      display: none;
    }
  }
</style>