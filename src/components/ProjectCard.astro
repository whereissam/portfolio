---
interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
  tags: string[];
  category: string;
}

const { title, description, image, link, tags, category } = Astro.props;
const isValidLink = link && link !== "#";
---

<div class="flex flex-col h-full">
  <div class="relative">
    <img src={image} alt={title} class="object-cover w-full h-40 rounded-lg" />
  </div>
  <div class="flex flex-col gap-2 mt-4">
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-semibold text-neutral-100">{title}</h3>
      {
        isValidLink && (
          <a
            href={link}
            target="_blank"
            rel="noopener noreferrer"
            class="text-neutral-400 hover:text-neutral-100"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
              <polyline points="15 3 21 3 21 9" />
              <line x1="10" y1="14" x2="21" y2="3" />
            </svg>
          </a>
        )
      }
    </div>
    <p class="text-neutral-400">{description}</p>
    <div class="flex flex-wrap gap-2 mt-2">
      {
        tags.map((tag) => (
          <span class="px-2 py-1 text-sm bg-neutral-800 rounded-md text-neutral-400">
            {tag}
          </span>
        ))
      }
    </div>
  </div>
</div>
