---
import { formatDate } from "../lib/helpers";
import BasicLayout from "./BasicLayout.astro";
import AuthorInfo from "../components/AuthorInfo.astro";

type Props = {
  title: string;
  description: string;
  pubDate: Date;
  minutesRead: string;
  url: string;
};

const { title, description, pubDate, minutesRead, url } = Astro.props;
---

<BasicLayout slug={url} page="blog" title={title} description={description}>
  <div
    style="min-height: 100vh; background: linear-gradient(135deg, #000000 0%, #0a0a0a 100%);"
  >
    <!-- Header -->
    <header
      style="border-bottom: 1px solid #262626; position: sticky; top: 0; z-index: 50; background: rgba(0, 0, 0, 0.95); backdrop-filter: blur(12px);"
    >
      <div style="max-width: 1200px; margin: 0 auto; padding: 1rem 2rem;">
        <div
          style="display: flex; align-items: center; justify-content: space-between;"
        >
          <a
            href="/blog"
            style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.75rem 1.25rem; border: 1px solid #404040; border-radius: 0.75rem; transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); font-weight: 500; font-size: 0.875rem; color: #FFFFFF; background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%); text-decoration: none; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);"
            onmouseover="this.style.background='linear-gradient(135deg, #2a2a2a 0%, #3a3a3a 100%)'; this.style.borderColor='#FF6B35'; this.style.transform='translateY(-1px)'; this.style.boxShadow='0 4px 16px rgba(255, 107, 53, 0.2)'"
            onmouseout="this.style.background='linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%)'; this.style.borderColor='#404040'; this.style.transform='translateY(0)'; this.style.boxShadow='0 2px 8px rgba(0, 0, 0, 0.3)'"
          >
            <svg
              style="width: 1rem; height: 1rem;"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Blog
          </a>

          <!-- Reading progress -->
          <div
            style="display: flex; align-items: center; gap: 1rem; font-size: 0.875rem; color: #A0A0A0;"
          >
            <div style="display: flex; align-items: center; gap: 0.75rem;">
              <AuthorInfo size="sm" showName={false} />
              <div>
                <div
                  style="font-weight: 600; color: #FFFFFF; font-size: 0.875rem;"
                >
                  Sam
                </div>
                <div style="font-size: 0.75rem; color: #A0A0A0;">
                  {minutesRead}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Hero Section -->
    <section
      style="max-width: 1200px; margin: 0 auto; padding: 4rem 2rem 2rem;"
    >
      <div style="max-width: 48rem; margin: 0 auto; text-align: center;">
        <!-- Category & Date -->
        <div
          style="display: flex; align-items: center; justify-content: center; gap: 1rem; margin-bottom: 2rem;"
        >
          <span
            style="padding: 0.5rem 1rem; border-radius: 2rem; font-weight: 600; font-size: 0.875rem; background: linear-gradient(135deg, rgba(255, 107, 53, 0.15) 0%, rgba(255, 107, 53, 0.05) 100%); color: #FF6B35; border: 1px solid rgba(255, 107, 53, 0.2);"
          >
            Development
          </span>
          <time
            style="padding: 0.5rem 1rem; border-radius: 2rem; font-weight: 500; font-size: 0.875rem; background: rgba(255, 255, 255, 0.05); color: #D0D0D0; border: 1px solid rgba(255, 255, 255, 0.1);"
            datetime={pubDate.toISOString()}
          >
            {formatDate(pubDate)}
          </time>
        </div>

        <!-- Title -->
        <h1
          style="font-size: clamp(2rem, 5vw, 3.5rem); font-weight: 800; margin-bottom: 1.5rem; line-height: 1.1; color: #FFFFFF; background: linear-gradient(135deg, #FFFFFF 0%, #E0E0E0 100%); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent;"
        >
          {title}
        </h1>

        <!-- Description -->
        {
          description && (
            <p style="font-size: 1.25rem; line-height: 1.7; color: #B0B0B0; margin-bottom: 2rem; max-width: 42rem; margin-left: auto; margin-right: auto;">
              {description}
            </p>
          )
        }

        <!-- Author Card -->
        <div
          style="display: inline-flex; align-items: center; gap: 1rem; padding: 1rem 1.5rem; background: rgba(255, 255, 255, 0.02); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 1rem; backdrop-filter: blur(8px);"
        >
          <AuthorInfo size="md" showName={false} />
          <div style="text-align: left;">
            <div style="font-weight: 600; color: #FFFFFF; font-size: 1rem;">
              Sam
            </div>
            <div style="font-size: 0.875rem; color: #A0A0A0;">
              Software Developer
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Table of Contents -->
    <section style="max-width: 1200px; margin: 0 auto; padding: 0 2rem 2rem;">
      <div style="max-width: 48rem; margin: 0 auto;">
        <div
          style="background: rgba(255, 255, 255, 0.02); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 1rem; padding: 1.5rem; backdrop-filter: blur(8px);"
        >
          <h2
            style="font-size: 1.125rem; font-weight: 600; color: #FFFFFF; margin: 0 0 1rem 0; display: flex; align-items: center; gap: 0.5rem;"
          >
            <svg
              style="width: 1.25rem; height: 1.25rem; color: #FF6B35;"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
            </svg>
            What You'll Learn
          </h2>
          <ul
            style="list-style: none; padding: 0; margin: 0; color: #B0B0B0; font-size: 0.9rem; line-height: 1.6;"
          >
            <li
              style="padding: 0.5rem 0; border-bottom: 1px solid rgba(255, 255, 255, 0.05); display: flex; align-items: center; gap: 0.75rem;"
            >
              <span
                style="width: 0.5rem; height: 0.5rem; background: #FF6B35; border-radius: 50%; flex-shrink: 0;"
              ></span>
              Understanding the Git commit author problem
            </li>
            <li
              style="padding: 0.5rem 0; border-bottom: 1px solid rgba(255, 255, 255, 0.05); display: flex; align-items: center; gap: 0.75rem;"
            >
              <span
                style="width: 0.5rem; height: 0.5rem; background: #FF6B35; border-radius: 50%; flex-shrink: 0;"
              ></span>
              Using interactive rebase to fix commits
            </li>
            <li
              style="padding: 0.5rem 0; border-bottom: 1px solid rgba(255, 255, 255, 0.05); display: flex; align-items: center; gap: 0.75rem;"
            >
              <span
                style="width: 0.5rem; height: 0.5rem; background: #FF6B35; border-radius: 50%; flex-shrink: 0;"
              ></span>
              Step-by-step guide with examples
            </li>
            <li
              style="padding: 0.5rem 0; display: flex; align-items: center; gap: 0.75rem;"
            >
              <span
                style="width: 0.5rem; height: 0.5rem; background: #FF6B35; border-radius: 50%; flex-shrink: 0;"
              ></span>
              Preventing future username issues
            </li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Article Content -->
    <main style="max-width: 1200px; margin: 0 auto; padding: 0 1rem 4rem;">
      <div style="max-width: 56rem; margin: 0 auto;">
        <article
          class="blog-article prose prose-lg prose-invert max-w-none custom-blog-content"
          style="background: rgba(255, 255, 255, 0.01); border: 1px solid rgba(255, 255, 255, 0.05); border-radius: 1.5rem; padding: 0.5rem; backdrop-filter: blur(8px); box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);"
        >
          <slot />
        </article>

        <!-- Related Articles -->
        <section
          style="margin-top: 4rem; padding: 2rem; background: rgba(255, 255, 255, 0.02); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 1.5rem; backdrop-filter: blur(8px);"
        >
          <h3
            style="font-size: 1.5rem; font-weight: 700; color: #FFFFFF; margin: 0 0 1.5rem 0; display: flex; align-items: center; gap: 0.75rem;"
          >
            <svg
              style="width: 1.5rem; height: 1.5rem; color: #FF6B35;"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
              ></path>
            </svg>
            More Development Articles
          </h3>
          <div style="display: grid; gap: 1rem;">
            <a
              href="/blog/follow-websites-without-rss"
              style="display: flex; align-items: center; justify-content: space-between; padding: 1rem; background: rgba(255, 255, 255, 0.03); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 0.75rem; text-decoration: none; color: inherit; transition: all 0.3s;"
              onmouseover="this.style.background='rgba(255, 107, 53, 0.05)'; this.style.borderColor='rgba(255, 107, 53, 0.2)'"
              onmouseout="this.style.background='rgba(255, 255, 255, 0.03)'; this.style.borderColor='rgba(255, 255, 255, 0.1)'"
            >
              <div>
                <div
                  style="font-weight: 600; color: #FFFFFF; margin-bottom: 0.25rem;"
                >
                  How to Follow Websites Without RSS
                </div>
                <div style="font-size: 0.875rem; color: #A0A0A0;">
                  Productivity Tools
                </div>
              </div>
              <svg
                style="width: 1.25rem; height: 1.25rem; color: #FF6B35;"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </section>

        <!-- Newsletter Signup -->
        <section
          style="margin-top: 3rem; padding: 2.5rem; background: linear-gradient(135deg, rgba(255, 107, 53, 0.1) 0%, rgba(255, 107, 53, 0.05) 100%); border: 1px solid rgba(255, 107, 53, 0.2); border-radius: 1.5rem; text-align: center; backdrop-filter: blur(8px);"
        >
          <div
            style="width: 3rem; height: 3rem; background: linear-gradient(135deg, #FF6B35 0%, #E55A2B 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;"
          >
            <svg
              style="width: 1.5rem; height: 1.5rem; color: #FFFFFF;"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <h3
            style="font-size: 1.5rem; font-weight: 700; color: #FFFFFF; margin: 0 0 0.75rem 0;"
          >
            Stay Updated
          </h3>
          <p
            style="color: #B0B0B0; margin: 0 0 1.5rem 0; max-width: 28rem; margin-left: auto; margin-right: auto;"
          >
            Get the latest tutorials and development tips delivered straight to
            your inbox.
          </p>
          <a
            href="/blog"
            style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.875rem 2rem; background: linear-gradient(135deg, #FF6B35 0%, #E55A2B 100%); color: #FFFFFF; text-decoration: none; border-radius: 0.75rem; font-weight: 600; transition: all 0.3s; box-shadow: 0 4px 16px rgba(255, 107, 53, 0.3);"
            onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 24px rgba(255, 107, 53, 0.4)'"
            onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 16px rgba(255, 107, 53, 0.3)'"
          >
            View All Articles
            <svg
              style="width: 1rem; height: 1rem;"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </section>

        <!-- Author Bio -->
        <section
          style="margin-top: 4rem; padding: 2.5rem; background: rgba(255, 255, 255, 0.02); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 1.5rem; backdrop-filter: blur(8px);"
        >
          <div
            style="display: flex; flex-direction: column; align-items: center; text-align: center; gap: 1.5rem;"
          >
            <AuthorInfo size="lg" showName={false} />
            <div>
              <h3
                style="font-size: 1.5rem; font-weight: 700; color: #FFFFFF; margin: 0 0 0.5rem 0;"
              >
                Sam
              </h3>
              <p style="color: #A0A0A0; margin: 0 0 1rem 0; font-size: 1rem;">
                Software Developer & Tech Enthusiast
              </p>
              <p
                style="color: #B0B0B0; line-height: 1.6; max-width: 32rem; margin: 0 auto;"
              >
                Passionate about web development, design, and creating amazing
                user experiences. I love sharing knowledge through tutorials and
                helping developers solve complex problems.
              </p>
            </div>
            <div style="display: flex; gap: 1rem;">
              <a
                href="/blog"
                style="padding: 0.875rem 1.75rem; background: linear-gradient(135deg, #FF6B35 0%, #E55A2B 100%); color: #FFFFFF; text-decoration: none; border-radius: 0.75rem; font-weight: 600; transition: all 0.3s; box-shadow: 0 4px 16px rgba(255, 107, 53, 0.3);"
                onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 24px rgba(255, 107, 53, 0.4)'"
                onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 16px rgba(255, 107, 53, 0.3)'"
              >
                More Articles
              </a>
              <a
                href="/"
                style="padding: 0.875rem 1.75rem; border: 1px solid rgba(255, 255, 255, 0.2); border-radius: 0.75rem; font-weight: 600; transition: all 0.3s; color: #FFFFFF; text-decoration: none; background: rgba(255, 255, 255, 0.05);"
                onmouseover="this.style.background='rgba(255, 255, 255, 0.1)'; this.style.borderColor='rgba(255, 255, 255, 0.3)'"
                onmouseout="this.style.background='rgba(255, 255, 255, 0.05)'; this.style.borderColor='rgba(255, 255, 255, 0.2)'"
              >
                Portfolio
              </a>
            </div>
          </div>
        </section>
      </div>
    </main>
  </div>
</BasicLayout>

<script>
  function setupCodeCopyButtons() {
    // Add copy buttons to all pre elements
    const preElements = document.querySelectorAll("pre");

    preElements.forEach((pre, index) => {
      // Skip if button already exists
      if (pre.querySelector(".code-copy-button")) return;

      const code = pre.querySelector("code");
      if (!code) return;

      // Create copy button
      const copyBtn = document.createElement("button");
      copyBtn.className = "code-copy-button";
      copyBtn.textContent = "Copy";
      copyBtn.setAttribute("aria-label", "Copy code to clipboard");

      // Copy functionality
      copyBtn.addEventListener("click", async () => {
        try {
          const codeText = code.textContent || "";
          await navigator.clipboard.writeText(codeText);

          copyBtn.textContent = "Copied!";
          copyBtn.classList.add("copied");

          setTimeout(() => {
            copyBtn.textContent = "Copy";
            copyBtn.classList.remove("copied");
          }, 2000);
        } catch (err) {
          console.error("Failed to copy code:", err);

          // Fallback for older browsers
          const textArea = document.createElement("textarea");
          textArea.value = code.textContent || "";
          document.body.appendChild(textArea);
          textArea.select();
          try {
            document.execCommand("copy");
            copyBtn.textContent = "Copied!";
            copyBtn.classList.add("copied");

            setTimeout(() => {
              copyBtn.textContent = "Copy";
              copyBtn.classList.remove("copied");
            }, 2000);
          } catch (fallbackErr) {
            copyBtn.textContent = "Failed";
            setTimeout(() => {
              copyBtn.textContent = "Copy";
            }, 2000);
          }
          document.body.removeChild(textArea);
        }
      });

      // Add button to pre element
      pre.appendChild(copyBtn);
    });
  }

  // Setup copy functionality when DOM is loaded
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", setupCodeCopyButtons);
  } else {
    setupCodeCopyButtons();
  }

  // Re-setup when navigating (for SPA-like behavior)
  document.addEventListener("astro:page-load", setupCodeCopyButtons);
</script>
